<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-position justify-content-center">
        <h1>New Recruiter/Employee</h1>
        <%= simple_form_for(@recruiter) do |p| %>
        <div class="row">
          <div class="col-6">
            <%= p.input :first_name, placeholder: "David" %>
          </div>
          <div class="col-6">
            <%= p.input :last_name, placeholder: "Sellam" %>
          </div>
          <div class="col-6">
            <%= p.input :email, placeholder: "sellam@mail.com" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label check_boxes optional">Assign skills</label>
          <input type="hidden" name="recruiter[skill_ids][]" value="">
          <div class="skill-choices">
            <% Skill.all.each do |skill| %>
            <input class="hidden" type="checkbox" value="<%= skill.id %>" name="recruiter[skill_ids][]" id="recruiter_skill_ids_<%= skill.id %>">
            <label class="skill-choice" for="recruiter_skill_ids_<%= skill.id %>">
              <%= skill.name %>
            </label>
            <% end %>
          </div>
        </div>
        <%= p.input :seniority, collection: Recruiter::STATUSES, prompt: "Select seniority level" %>

        <%= p.submit "Create a recruiter", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
