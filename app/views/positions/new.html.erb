<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-position justify-content-center">
        <h1>Add a job position:</h1>
        <%= simple_form_for(@position) do |p| %>
        <div class="row">
          <div class="col-6">
            <%= p.input :title, placeholder: "Enter position's title" %>
          </div>
          <div class="col-6">
            <%= p.input :company, placeholder: "Enter company's name" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label check_boxes optional">Skills</label>
          <input type="hidden" name="position[skill_ids][]" value="">
          <div class="skill-choices">
            <% Skill.all.each do |skill| %>
            <input class="hidden" type="checkbox" value="<%= skill.id %>" name="position[skill_ids][]" id="position_skill_ids_<%= skill.id %>">
            <label class="skill-choice" for="position_skill_ids_<%= skill.id %>">
              <%= skill.name %>
            </label>
            <% end %>
          </div>
        </div>
        <%= p.submit "Save", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>


