<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-position justify-content-center">
        <h1>New Applicant</h1>
        <%= simple_form_for(@candidate) do |p| %>
        <div class="row">
          <div class="col-6">
            <%= p.input :first_name, placeholder: "Jane" %>
          </div>
          <div class="col-6">
            <%= p.input :last_name, placeholder: "Smith" %>
          </div>
          <div class="col-6">
            <%= p.input :email, placeholder: "smith@mail.com" %>
          </div>
          <div class="col-6">
            <%= p.input :linkedin, placeholder: "www.linkedin.com/jsmith" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label check_boxes optional">Assign skills</label>
          <input type="hidden" name="position[skill_ids][]" value="">
          <div class="skill-choices">
            <% Skill.all.each do |skill| %>
            <input class="hidden" type="checkbox" value="<%= skill.id %>" name="position[skill_ids][]" id="position_skill_ids_<%= skill.id %>">
            <label class="skill-choice" for="position_skill_ids_<%= skill.id %>">
              <%= skill.name %>
            </label>
            <% end %>
          </div>
        </div>
        <%= p.submit "Create a candidate", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
